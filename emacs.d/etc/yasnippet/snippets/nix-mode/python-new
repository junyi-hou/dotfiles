# -*- mode: snippet -*-
# name: python-new
# key: python
# expand-env: ((yas-indent-line 'fixed))
# condition: (string= (buffer-string) "python")
# --
{ pkgs ? import <nixpkgs> {} }:

let
  pythonEnv = pkgs.python${1:39};
  pythonEnvPackages = pkgs.python$1Packages;
in

pkgs.mkShell {
  buildInputs = [
    (pythonEnv.withPackages (p: with p; [ $2 ]))
    pkgs.nodePackages.pyright
    $3
  ];
  $0
}
